<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mysh3ll.loginapi.UserProfileActivity">

    <!--  Header Starts-->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@layout/header_gradient"
        android:gravity="center"
        android:paddingBottom="5dip"
        android:paddingTop="5dip">
        <!-- Logo Start-->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_logo" />
        <!-- Logo Ends -->
    </LinearLayout>
    <!--  Header Ends -->

    <!-- Footer Start -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="90dip"
        android:layout_alignParentBottom="true"
        android:background="@layout/footer_repeat">

    </LinearLayout>
    <!-- Place footer next to header to set z-index property to minus value -->
    <!-- Footer Ends -->

    <!-- Login Form -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:orientation="vertical">
        <!--  Pseudo Label -->
        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/user_username"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="0dp"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#1fa67b" />
        <!--  Email Label -->
        <TextView
            android:id="@+id/textViewMail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/user_mail"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/user_mail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="0dp"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#1fa67b" />
        <!--  Password Label -->
        <TextView
            android:id="@+id/textViewPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/user_password"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/user_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="#1fa67b" />
        <!-- Update button -->
        <Button
            android:id="@+id/btn_user_profile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:backgroundTint="#1fa67b"
            android:text="@string/user_btn_update" />
        <!-- Cancel button -->

    </LinearLayout>
    <!-- Login Form Ends -->

</RelativeLayout>
